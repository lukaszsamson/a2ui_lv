                "error",
                "favorite",
                "favoriteOff",
                "folder",
                "help",
                "home",
                "info",
                "locationOn",
                "lock",
                "lockOpen",
                "mail",
                "menu",
                "moreVert",
                "moreHoriz",
                "notificationsOff",
                "notifications",
                "payment",
                "person",
                "phone",
                "photo",
                "print",
                "refresh",
                "search",
                "send",
                "settings",
                "share",
                "shoppingCart",
                "star",
                "starHalf",
                "starOff",
                "upload",
                "visibility",
                "visibilityOff",
                "warning"
              ]
            },
