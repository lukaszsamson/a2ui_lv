  "styles": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "primaryColor": {
        "type": "string",
        "description": "A hex color code to use as the primary theme color.",
        "pattern": "^#[0-9a-fA-F]{6}$"
      },
      "font": {
        "type": "string",
        "description": "The font family to use for the UI."
      }
    }
  }
